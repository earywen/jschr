# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Discord Integration (Required for notifications and voting)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url
DISCORD_PUBLIC_KEY=your-discord-public-key-here
DISCORD_BOT_TOKEN=your-bot-token-here
DISCORD_CHANNEL_ID=your-channel-id-here

# WarcraftLogs API (Optional - for character stats)
WARCRAFTLOGS_CLIENT_ID=your-client-id
WARCRAFTLOGS_CLIENT_SECRET=your-client-secret

# Battle.net API (Optional - for character authentication)
BATTLENET_CLIENT_ID=your-client-id
BATTLENET_CLIENT_SECRET=your-client-secret

# GitHub PAT (Optional - for recruitment sync workflow trigger)
GH_PAT=your-github-personal-access-token

# N8N Webhook (Optional - for recruitment sync automation)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/sync-recruitment

# Application URL (Optional - defaults to localhost in development)
NEXT_PUBLIC_APP_URL=https://your-app-domain.com
NEXT_PUBLIC_BASE_URL=https://your-app-domain.com
